{{!
    @template mod_readaloud/mobile_view_page

    This template renders the mobile page.

    Example context (json):
    {
        "cmid": 3,
        "user_id": 2,
        "wwwroot": "http://example.com",
        "secret": "your_secret_token"
    }
}}
{{=<% %>=}}
<div style="height: 100%; width: 100%; background: white;">
    <iframe
            width="100%"
            height="100%"
            src="<% wwwroot %>/mod/readaloud/view.php?id=<% cmid %>&user_id=<% user_id %>&secret=<% secret %>&embed=2"
            frameborder="0"
            allow="microphone; camera"
            allowfullscreen="allowfullscreen">
    </iframe>
</div>
